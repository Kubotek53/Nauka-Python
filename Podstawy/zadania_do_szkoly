def zad1():
    slowo = input("Podaj słowo dla którego chcesz sprawdzić kod ASCII: ")
    suma = 0
    for z in slowo:
        print(f"Kod ASCII dla znaku '{z}' to: {ord(z)}")
        suma += ord(z)
    return(f"Sumą kodu ASCII jest: {suma}")
print(zad1())

def zad2():
    zdanie = input("Podaj zdanie: ")
    zdanie = zdanie.lower()
    samogloski = ['a', 'e', 'i', 'o', 'u', 'y']
    sumsamo = 0
    sumspol = 0
    for s in zdanie:
        if s.isalpha():
            if s in samogloski:
                sumsamo += 1
            else:
                sumspol += 1
    print(sumsamo)
    print(sumspol)
print(zad2())

def zad3():
    zdanie = "kurs pythona jest super"
    camel_case = "".join(word.capitalize() for word in zdanie.split())
    return camel_case
print(zad3())
def zad4():
    roznica = ord('D') - ord('A')
    roznica = abs(roznica)
    return(roznica)
print(zad4())
def zad5():
    napis = "Pass##wo$$rd123!!"
    czysty = "".join(char for char in napis if char.isalnum())
    return czysty
def zad6():
    import os
    path = os.path.join(os.path.dirname(__file__), "dane.txt")
    short_lines = []
    try:
        with open(path, "r", encoding="utf-8") as plik:
            for wiersz in plik:
                s = wiersz.strip()
                print(s)
                if len(s) < 10:
                    short_lines.append(s)
    except FileNotFoundError:
        return f"Plik nie znaleziony: {path}"
    if short_lines:
        return f"Wiersze krótsze niż 10 znaków: {short_lines}"
    return "Brak wierszy krótszych niż 10 znaków"

print(zad6())